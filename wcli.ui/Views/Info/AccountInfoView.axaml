<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vmi="using:WasabiCli.ViewModels.Info"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WasabiCli.Views.Info.AccountInfoView"
             x:CompileBindings="True" x:DataType="vmi:AccountInfoViewModel">
  <ScrollViewer HorizontalScrollBarVisibility="Disabled">
    <StackPanel Spacing="4">
      <!-- Name -->
      <Label Content="Name" />
      <TextBox Text="{Binding Name}"
               Classes="readonly" />
      <!-- PublicKey -->
      <Label Content="PublicKey" />
      <TextBox Text="{Binding PublicKey}"
               Classes="readonly" />
      <!-- KeyPath -->
      <Label Content="KeyPath" />
      <TextBox Text="{Binding KeyPath}"
               Classes="readonly" />
    </StackPanel>
  </ScrollViewer>
</UserControl>
