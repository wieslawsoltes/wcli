<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vmi="using:WasabiCli.ViewModels.Info"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WasabiCli.Views.Info.GetFeeRatesInfoView"
             x:CompileBindings="True" x:DataType="vmi:GetFeeRatesInfoViewModel">
  <!-- FeeRates -->
  <Expander HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Padding="0"
            Margin="0,4,0,0"
            IsExpanded="True">
    <Expander.Header>
      <Label Content="{Binding FeeRates.Count, StringFormat={}FeeRates: {0}, FallbackValue=0}" />
    </Expander.Header>
    <ListBox ItemsSource="{Binding FeeRates}">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding .}"
                     VerticalAlignment="Center" />
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </Expander>

</UserControl>
