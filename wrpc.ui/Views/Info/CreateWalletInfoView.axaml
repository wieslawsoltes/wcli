<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vmi="using:WasabiRpc.ViewModels.Info"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WasabiRpc.Views.Info.CreateWalletInfoView"
             x:CompileBindings="True" x:DataType="vmi:CreateWalletInfoViewModel">
  <ScrollViewer HorizontalScrollBarVisibility="Disabled">
    <StackPanel Spacing="4">
      <!-- Mnemonic -->
      <Label Content="Mnemonic" />
      <TextBox Text="{Binding Mnemonic}"
               Classes="readonly" />
    </StackPanel>
  </ScrollViewer>
</UserControl>
