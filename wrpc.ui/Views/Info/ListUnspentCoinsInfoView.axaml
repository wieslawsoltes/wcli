<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vmi="using:WasabiRpc.ViewModels.Info"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WasabiRpc.Views.Info.ListUnspentCoinsInfoView"
             x:CompileBindings="True" x:DataType="vmi:ListUnspentCoinsInfoViewModel">
  <!-- UnspentCoins -->
  <Expander HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Padding="0"
            Margin="0,4,0,0"
            IsExpanded="True">
    <Expander.Header>
      <Label Content="{Binding Coins.Count, StringFormat={}UnspentCoins: {0}, FallbackValue=0}" />
    </Expander.Header>
    <ListBox ItemsSource="{Binding Coins}">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <DockPanel Background="Transparent">
            <DockPanel.ContextMenu>
              <ContextMenu>
                <MenuItem Header="Exclude Coin" Command="{Binding ExcludeFromCoinJoinCommand}" />
                <Separator />
                <MenuItem Header="Remove Coin Exclusion" Command="{Binding RemoveExclusionFromCoinJoinCommand}" />
              </ContextMenu>
            </DockPanel.ContextMenu>
            <Button Content="Details >"
                    Command="{Binding DetailsNavigationService.ClearAndNavigateToCommand}"
                    CommandParameter="{Binding  CoinInfo}"
                    Margin="4,4,8,4"
                    DockPanel.Dock="Right"/>
            <TextBlock VerticalAlignment="Center">
              <Run>Amount: </Run>
              <Run Text="{Binding CoinInfo.Amount}" />
              <LineBreak />
              <Run>AnonymityScore: </Run>
              <Run Text="{Binding CoinInfo.AnonymityScore}" />
            </TextBlock>
          </DockPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </Expander>
</UserControl>
