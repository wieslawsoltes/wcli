<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vmi="using:WasabiRpc.ViewModels.Info"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WasabiRpc.Views.Info.PaymentInCoinjoinStateInfoView"
             x:CompileBindings="True" x:DataType="vmi:PaymentInCoinjoinStateInfoViewModel">
  <ScrollViewer HorizontalScrollBarVisibility="Disabled">
    <StackPanel Spacing="4">
      <!-- Status -->
      <Label Content="Status" />
      <TextBox Text="{Binding Status}"
               Classes="readonly" />
      <!-- Round -->
      <Label Content="Round" />
      <TextBox Text="{Binding Round}"
               Classes="readonly" />
      <!-- TxId -->
      <Label Content="TxId" />
      <TextBox Text="{Binding TxId}"
               Classes="readonly" />
    </StackPanel>
  </ScrollViewer>
</UserControl>
